#include <iostream>
int main(){
    int choice;
    std::cout << "Please choose a beverage (Enter #1-5):\n1. Pepsi\n2. Sprite\n3. Sunkist\n4. Dr. Pepper\n5. Mountain Dew\n";
    std::cin >> choice;
    switch (choice) {
        case 1:
            std::cout << "You chose PEPSI.";
            break;
        case 2:
            std::cout << "You chose SPRITE.";
            break;
        case 3:
            std::cout << "You chose SUNKIST.";
            break;
        case 4:
            std::cout << "You chose DR. PEPPER.";
            break;
        case 5:
            std::cout << "You chose MOUNTAIN DEW.";
            break;
        default:
            std::cout << "Error. choice was not valid, here is your money back.";
    }
    return 0;
}
