#include <iostream>
void letterGrade(int score)
{
   if (score >= 90 && score <= 100)
   {
      std::cout << "You got an A in the class!";
   }
   else if (score >= 80 && score <= 89)
   {
      std::cout << "You got an B in the class!";
   }
   else if (score >= 70 && score <= 79)
   {
      std::cout << "You got an C in the class.";
   }
   else if (score >= 60 && score <= 69)
   {
      std::cout << "You got an D in the class.";
   }
   else if (score >= 0 && score <= 59)
   {
      std::cout << "You got an A in the class!";
   }
}
int main()
{
   int score;
   std::cout << "Please enter your programming class grade score: ";
   std::cin >> score;
   letterGrade(score);
   return 0;
}
